<%- include("partials/header.ejs") %>
    <% if (locals.postId) { %>
        <div class="content-create">
            <div class="create-head-text">
                <h2><span style="color: #cc0000;">Edit</span> Blog</h2>
                <h5>Edit existing blog...</h5>
                <div class="middle-line-create">
                    <div class="small-line small-line-create"></div>
                    <div class="small-line small-line-create"></div>
                    <div class="small-line small-line-create"></div>
                    <div class="small-line small-line-create"></div>
                    <div class="small-line small-line-create"></div>
                </div>
            </div>
            <div class="div-form">
                <form action="/update" method="post">
                    <label for="fname"><h2><span style="color: #cc0000;">Title</span> Of The Blog:</label></h2>
                    <div><input type="text" id="title" name="title" placeholder="<%= blogTitle %>"><br><br></div>
                    <label for="fname"><h2><span style="color: #cc0000;">Content</span> Of The Blog:</label></h2>
                    <textarea type="text" id="content" name="content" placeholder="<%= blogContent %>">
                    </textarea>
                    <input class="save-blog-btn button1" type="submit" value="Save">
                </form>
            </div>
            <img src="images/hand-writing.png" alt="hand writing">
        </div>
    <% } else { %>
        <div class="content-create">
            <div class="create-head-text">
                <h2><span style="color: #cc0000;">Create</span> Blog</h2>
                <h5>Write your ideas, stories...</h5>
                <div class="middle-line-create">
                    <div class="small-line small-line-create"></div>
                    <div class="small-line small-line-create"></div>
                    <div class="small-line small-line-create"></div>
                    <div class="small-line small-line-create"></div>
                    <div class="small-line small-line-create"></div>
                </div>
            </div>
            <div class="div-form">
                <form action="/save" method="post">
                    <label for="fname"><h2><span style="color: #cc0000;">Title</span> Of The Blog:</label></h2>
                    <div><input type="text" id="title" name="title"><br><br></div>
                    <label for="fname"><h2><span style="color: #cc0000;">Content</span> Of The Blog:</label></h2>
                    <textarea type="text" id="content" name="content" placeholder="Write your content here...">
                    </textarea>
                    <input class="save-blog-btn button1" type="submit" value="Save">
                </form>
            </div>
            <img src="images/hand-writing.png" alt="hand writing">
        </div>
    <% } %>
<%- include("partials/footer.ejs") %>